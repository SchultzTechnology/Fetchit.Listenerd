@model Fetchit.WebPage.Models.MqttSettingsViewModel

@{
    ViewData["Title"] = "MQTT Configuration";
    var isEdit = ViewData["IsEdit"] as bool? ?? false;
    var configId = ViewData["ConfigId"];
    var createdAt = ViewData["CreatedAt"] as DateTime?;
    var updatedAt = ViewData["UpdatedAt"] as DateTime?;
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-gear-fill"></i> @ViewData["Title"]
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        @if (isEdit)
                        {
                            <i class="bi bi-pencil-square"></i> <text>Configuration</text>
                        }
                        else
                        {
                            <i class="bi bi-plus-circle"></i> <text>Configuration</text>
                        }
                    </h5>
                    @if (isEdit)
                    {
                        <span class="badge bg-light text-dark">Active</span>
                    }
                </div>
                <div class="card-body">
                    <form asp-action="Save" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ConnectionSecret" class="form-label">
                                <i class="bi bi-key"></i> Connection Secret
                            </label>
                            <input asp-for="ConnectionSecret" class="form-control" placeholder="Enter base64 encoded connection string" />
                            <span asp-validation-for="ConnectionSecret" class="text-danger"></span>
                            <div class="form-text">Base64 encoded connection string for MQTT broker.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BrokerPort" class="form-label">
                                <i class="bi bi-hdd-network"></i> Broker Port
                            </label>
                            <input asp-for="BrokerPort" class="form-control" type="number" min="1" max="65535" />
                            <span asp-validation-for="BrokerPort" class="text-danger"></span>
                            <div class="form-text">Port number for the MQTT broker (typically 443, 1883, or 8883).</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TopicSubscribe" class="form-label">
                                <i class="bi bi-arrow-down-circle"></i> Topic Subscribe
                            </label>
                            <input asp-for="TopicSubscribe" class="form-control" placeholder="e.g., fetchit/commands/#" />
                            <span asp-validation-for="TopicSubscribe" class="text-danger"></span>
                            <div class="form-text">MQTT topic to subscribe to (supports wildcards: # and +).</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TopicPublish" class="form-label">
                                <i class="bi bi-arrow-up-circle"></i> Topic Publish
                            </label>
                            <input asp-for="TopicPublish" class="form-control" placeholder="e.g., fetchit/status/" />
                            <span asp-validation-for="TopicPublish" class="text-danger"></span>
                            <div class="form-text">MQTT topic to publish messages to.</div>
                        </div>

                        @if (isEdit && createdAt.HasValue && updatedAt.HasValue)
                        {
                            <div class="border-top pt-3 mb-3">
                                <div class="row text-muted small">
                                    <div class="col-md-6">
                                        <i class="bi bi-calendar-plus"></i> <strong>Created:</strong> @createdAt.Value.ToString("yyyy-MM-dd HH:mm:ss") UTC
                                    </div>
                                    <div class="col-md-6">
                                        <i class="bi bi-clock-history"></i> <strong>Updated:</strong> @updatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss") UTC
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> @(isEdit ? "Save Changes" : "Create Configuration")
                            </button>
                            
                            @if (isEdit)
                            {
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="bi bi-trash"></i> Delete Configuration
                                </button>
                            }
                        </div>
                    </form>
                </div>               
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-question-circle"></i> Configuration Help
                    </h6>
                    <ul class="small mb-0">
                        <li><strong>Connection Secret:</strong> The base64-encoded connection string provided by your MQTT broker.</li>
                        <li><strong>Broker Port:</strong> Standard ports are 1883 (unencrypted), 8883 (SSL/TLS), or 443 (WebSocket).</li>
                        <li><strong>Subscribe Topic:</strong> Use # as wildcard for all subtopics, + for single level.</li>
                        <li><strong>Publish Topic:</strong> The base topic where status messages will be sent.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@if (isEdit)
{
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this MQTT configuration?</p>
                    <p class="text-danger"><strong>This action cannot be undone!</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x"></i> Cancel
                    </button>
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Configuration
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
